<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_day"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:orientation="vertical"
        android:gravity="top|center_horizontal">
        
        
        <TextView
            android:id="@+id/card_day_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ср"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"/>
        
        <ImageView
            android:id="@+id/card_weather_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/nt_partlycloudy"/>

        <TextView
            android:id="@+id/card_day_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-12/-14 °C"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/card_day_conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Облачно"
            android:textStyle="bold"
            android:textSize="12sp"
            android:gravity="center"/>


    </LinearLayout>

</android.support.v7.widget.CardView>